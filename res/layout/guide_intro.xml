<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="#000000">
   <TextView android:id="@+id/guide_title"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="top"
         android:textSize="36dp"
         android:textColor="#FFFFFF" 
         android:background="#000000" />
   <com.ifixit.android.ifixit.LoaderImage android:id="@+id/intro_image" 
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_gravity="left" />
   <ScrollView android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
	     android:layout_alignParentRight="true" >
         
	   <LinearLayout android:layout_width="150dip"
	         android:layout_height="fill_parent"
	         android:layout_marginTop="96dp"
	         android:layout_marginRight="16dp"
	         android:layout_alignParentRight="true"
	         android:orientation="vertical">
	      <TextView android:id="@+id/guide_intro_text"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_gravity="right"
	         android:textSize="18dp"
	         android:textColor="#f3f3f3" />
	      <LinearLayout android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:weightSum="2">
		      <TextView android:id="@+id/guide_difficulty"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18dp"
	            android:textColor="#f3f3f3"
	            android:layout_weight="1" />
		      <TextView android:id="@+id/guide_author"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18dp"
	            android:textColor="#f3f3f3"
	            android:layout_weight="1" />
	      </LinearLayout>
	      
	      <TextView android:id="@+id/num_steps"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="16dp"
	         android:textSize="18dp"
	         android:textColor="#f3f3f3" />            
	      
	      <TextView android:id="@+id/guide_tools"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="16dp"
	         android:textSize="18dp"
	         android:textColor="#f3f3f3" />            
	      
	      <TextView android:id="@+id/guide_parts"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="16dp"
	         android:textSize="18dp"
	         android:textColor="#f3f3f3" />                  
	      
	      <TextView android:id="@+id/guide_date"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textSize="24dp"
	         android:textColor="#f3f3f3" />      
	   </LinearLayout>
   </ScrollView>
</RelativeLayout>
