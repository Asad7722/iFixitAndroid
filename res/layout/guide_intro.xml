<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="#000000">
   	<TextView android:id="@+id/guide_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="top"
	    android:textSize="36dip"
	    android:textColor="#FFFFFF" 
	    android:background="#000000" />

 	<ImageView android:id="@+id/intro_image" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_gravity="left" />

   	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="440dip"
      android:layout_height="fill_parent"
      android:layout_marginTop="96dip"
      android:layout_marginRight="16dip"
      android:layout_alignParentRight="true"
      android:orientation="vertical">
     	<TextView android:id="@+id/guide_intro_text"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:textSize="18dip"
		    android:textColor="#f3f3f3" />
	    <TextView android:id="@+id/guide_difficulty"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18dip"
		    android:textColor="#f3f3f3" />
	    <TextView android:id="@+id/guide_author"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18dip"
		    android:textColor="#f3f3f3" />
		<TextView android:id="@+id/guide_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18dip"
		    android:textColor="#f3f3f3" />      
    </LinearLayout>
</RelativeLayout>