<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style name="Theme.iFixit" parent="Theme.HoloEverywhereLight.DarkActionBar.Sherlock">
        <!-- Android styles -->
        <item name="android:logo">@drawable/logo_ifixit</item>
       
        <!-- Action Bar Sherlock overrides -->
        <item name="actionBarTabTextStyle">@style/Widget.iFixit.ActionBar.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.iFixit.ActionBar.TabText</item>
        <item name="android:actionBarStyle">@style/Widget.iFixit.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.iFixit.ActionBar</item>
        <item name="actionBarTabStyle">@style/Widget.iFixit.ActionBar.TabView</item>
        <item name="android:actionBarTabStyle">@style/Widget.iFixit.ActionBar.TabView</item>
       
        <!-- Custom Attributes / Styles -->
        <item name="topicHeaderColor">@color/ifixit_blue</item>        
    </style>

    <style name="Widget.iFixit.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <!--  <item name="background">@color/ifixit_blue</item>
        <item name="android:background">@color/ifixit_blue</item> -->
        <item name="titleTextStyle">@style/TextAppearance.iFixit.ActionBar.Title</item>
        <item name="android:titleTextStyle">@style/TextAppearance.iFixit.ActionBar.Title</item>      
        
    </style>
   
    <style name="Widget.iFixit.ActionBar.TabText" parent="Widget.Sherlock.Light.ActionBar.TabText.Inverse">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>       
    </style>
    
    <style name="Widget.iFixit.ActionBar.TabView" parent="Widget.Sherlock.Light.ActionBar.TabView.Inverse">
        <item name="android:background">@drawable/ifixit_tab_indicator</item>    
        <item name="background">@drawable/ifixit_tab_indicator</item>            
    </style>
        
    <style name="TextAppearance.iFixit.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item> 
    </style>
 
    <style name="Theme.Dozuki" parent="Theme.iFixit">
        <!-- Android styles -->
        <item name="android:logo">@drawable/logo_dozuki</item>
        
        <!-- Action Bar Sherlock overrides -->
        <item name="actionBarTabTextStyle">@style/Widget.Dozuki.ActionBar.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.Dozuki.ActionBar.TabText</item>
        <item name="android:actionBarStyle">@style/Widget.Dozuki.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.Dozuki.ActionBar</item>
        <item name="actionBarTabStyle">@style/Widget.Dozuki.ActionBar.TabView</item>
        <item name="android:actionBarTabStyle">@style/Widget.Dozuki.ActionBar.TabView</item>
        
        <!-- Custom Attributes / Styles for Dozuki -->
        <item name="topicHeaderColor">@color/dozuki_green</item>
    </style>

    <style name="Widget.Dozuki.ActionBar" parent="Widget.iFixit.ActionBar"></style>   
    <style name="Widget.Dozuki.ActionBar.TabText" parent="Widget.iFixit.ActionBar.TabText"></style>
    <style name="TextAppearance.Dozuki.ActionBar.Title" parent="TextAppearance.iFixit.ActionBar.Title"></style>
    
    <style name="Widget.Dozuki.ActionBar.TabView" parent="Widget.iFixit.ActionBar.TabView">
        <item name="android:background">@drawable/dozuki_tab_indicator</item>    
        <item name="background">@drawable/dozuki_tab_indicator</item>            
    </style>

</resources>