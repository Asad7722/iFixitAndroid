<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Base" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="doz__textColorPrimary">@color/black</item>
        <item name="doz__textColorSecondary">@color/gray</item>
        <item name="doz__background">@color/white</item>
        <item name="doz__imageBorder">@color/image_border</item>
        <item name="doz__topicDefaultBackground">@style/Widget.iFixit.TopicBackground</item>
        <item name="doz__listItemSelector">@drawable/list_selector_holo_light</item>

        <!-- Action Bar Logo -->
        <item name="logo">@android:color/transparent</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="icon">@android:color/transparent</item>
        <item name="android:icon">@android:color/transparent</item>

        <!-- Holo Theme -->
        <item name="dividerHorizontal">?android:listDivider</item>
        <item name="dividerVertical">?android:listDivider</item>
        <item name="listPreferredItemHeightSmall">48dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>

        <item name="android:colorBackground">?doz__background</item>
        <item name="android:windowBackground">?doz__background</item>

        <item name="android:progressBarStyle">@style/Base.ProgressBar</item>

        <item name="buttonBarStyle">@style/Base.ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/Base.Button.Borderless</item>

        <item name="menuDrawerStyle">@style/MenuDrawer.Widget</item>
        <item name="mdMenuBackground">@color/menu_background</item>
    </style>

    <style name="Theme.Dozuki" parent="Theme.Base"></style>
    <style name="Theme.iFixit" parent="Theme.Base"></style>
    <style name="Theme.Accustream" parent="Theme.Base"></style>

</resources>
