        <!-- Default Android style overrides -->
        <item name="android:dialogTheme">@style/Holo.Theme.Dialog.Light</item>

        <!-- iFixit Custom Attributes / Styles -->
        <item name="doz__textColorPrimary">@color/black</item>
        <item name="doz__textColorSecondary">@color/gray</item>
        <item name="doz__background">@color/white</item>
        <item name="doz__imageBorder">@color/image_border</item>

        <item name="doz__topicHeaderColor">@color/ifixit_blue</item>
        <item name="doz__listViewStyle">@style/Widget.iFixit.ListViewStyle</item>
        <item name="doz__sectionHeader">@drawable/section_header__blue</item>
        <item name="doz__topicDefaultBackground">@style/Widget.iFixit.TopicBackground</item>
    </style>

