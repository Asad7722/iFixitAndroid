<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text.title">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="text.title.full">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="text.title.600">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <style name="text.title.600.full">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="text.title.720">
        <item name="android:textSize">42sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="text.title.720.full">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="text.body">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.body.full">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="text.body.half">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text.body.720">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="text.body.720.full">
        <item name="android:layout_width">fill_parent</item>
    </style>
        <style name="text.body.720.half">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text.body.step_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">97</item>
    </style>

    <style name="text.body.step_row.720">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.list">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="text.list.full">
        <item name="android:layout_width">fill_parent</item>
    </style>
    
    <style name="text.list.full.header">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item> 
        <item name="android:textColor">#ffffff</item>               
    </style>

</resources>
