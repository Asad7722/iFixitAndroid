<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="guide_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:background">@drawable/bg_img</item>
    </style>

    <style name="guide_wrap.land">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="guide_wrap.vertical">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="guide_wrap.600">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="guide_wrap.720">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="image_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="image_wrap.land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="image_wrap.600">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="image_wrap.600.land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="image_wrap.720">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="image_wrap.720.land">
        <item name="android:layout_width">640dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="main_image">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/img_background</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="main_image.land">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="main_image.600">
        <item name="android:layout_width">540dp</item>
        <item name="android:layout_height">320dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="main_image.600.land">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="main_image.720">
        <item name="android:layout_width">720dp</item>
        <item name="android:layout_height">540dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="main_image.720.land">
        <item name="android:layout_width">640dp</item>
        <item name="android:layout_height">480dp</item>
        
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="thumbnail_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="thumbnail_view.land">
        <item name="android:layout_below">@id/main_image</item>
    </style>

    <style name="thumbnail_view.vertical">
        <item name="android:layout_toRightOf">@id/main_image</item>
    </style>

    <style name="step_text_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>        
    </style>

    <style name="step_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:divider">#00000000</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:layout_below">@id/step_title</item>
        <item name="android:background">@drawable/bg_img</item>
        <item name="android:overScrollFooter">@null</item>
    </style>

</resources>
