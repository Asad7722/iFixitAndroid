<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text.title">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text.body">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginTop">@dimen/body_text_top_spacing</item>
    </style>

    <style name="text.body.no_spacing">
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="text.body.step_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">97</item>
    </style>

    <style name="text.body.step_row.720">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="text.list" parent="Holo.TextAppearance.Medium.Inverse">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>

        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>

        <item name="android:textSize">18sp</item>
    </style>

    <style name="TopicHeaderRow" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">?sectionHeader</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?topicHeaderColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SectionListView">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <!-- topic_guide_list.xml -->

    <style name="topicGuideGrid">

    </style>

    <!-- topic_guide_item.xml -->

    <style name="TopicGuideItem">
        <item name="android:background">@color/topic_guide_item_background</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="TopicGuideThumbnail">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@color/image_border</item>
    </style>

    <style name="TopicGuideTitle" parent="Holo.TextAppearance.Medium.Inverse">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="guideStepWrap">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/page_padding</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="guideStepMediaWrap">
        <item name="android:layout_marginBottom">@dimen/guide_step_section_seperator</item>
    </style>

    <style name="guideStepLines">
        <item name="android:background">@color/white</item>
    </style>

    <style name="thumbnail">
        <item name="android:background">@color/image_border</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">@dimen/guide_thumbnail_padding</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="thumbnailList">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="guideViewThumbnails">
        <item name="android:layout_marginLeft">@dimen/guide_thumbnail_spacing</item>
        <item name="android:layout_toRightOf">@id/main_image</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="guideMediaMain">
        <item name="android:padding">@dimen/guide_image_padding</item>
        <item name="android:layout_marginBottom">@dimen/guide_image_spacing_bottom</item>
    </style>

    <style name="TextAppearanceFinish">
        <item name="android:color">@color/white</item>
    </style>

    <style name="MenuDrawer"/>

    <style name="MenuDrawer.Widget"/>

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/md__category_background</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDrawer.Widget.Title">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>

        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="WizardPageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="WizardPageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ff0099cc</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="WizardPageDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="WizardFormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

</resources>
