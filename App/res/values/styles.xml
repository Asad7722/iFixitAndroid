<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text.title">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text.body">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginTop">@dimen/body_text_top_spacing</item>
    </style>

    <style name="text.body.no_spacing">
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="text.body.step_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">97</item>
    </style>

    <style name="text.body.step_row.720">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="text.list">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="text.list.header">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="step_wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_img</item>
        <item name="android:padding">@dimen/page_padding</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="guide_step_media_wrap">
        <item name="android:layout_marginBottom">@dimen/guide_step_section_seperator</item>
    </style>

    <style name="guide_step_list_view">
        <item name="android:background">@drawable/bg_img</item>
    </style>

    <style name="guide_thumbnail">
        <item name="android:background">@color/image_border</item>
        <item name="android:visibility">invisible</item>
        <item name="android:padding">@dimen/guide_thumbnail_padding</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="guide_thumbnail_w_spacing" parent="guide_thumbnail">
        <item name="android:layout_marginBottom">@dimen/guide_thumbnail_spacing</item>
    </style>

    <style name="thumbnail_orientation">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="thumbnail_position">
        <item name="android:layout_marginLeft">@dimen/guide_thumbnail_spacing</item>
        <item name="android:layout_toRightOf">@id/main_image</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="guide_main_image_spacing">
        <item name="android:padding">@dimen/guide_image_padding</item>
        <item name="android:layout_marginBottom">@dimen/guide_image_spacing_bottom</item>
    </style>

    <style name="MenuDrawer"/>

    <style name="MenuDrawer.Widget"/>

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/md__category_background</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDrawer.Widget.Title">
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
