<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text.title">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>        
    </style>
    
    <style name="text.body">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginTop">@dimen/body_text_top_spacing</item>
    </style>

    <style name="text.body.no_spacing">
        <item name="android:layout_margin">0dp</item>
    </style>
    
    <style name="text.body.step_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">97</item>
    </style>

    <style name="text.body.step_row.720">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="text.list">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
	</style>
    
    <style name="text.list.header">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/white</item>               
    </style>
    
    <style name="step_wrap">
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="seperator">
        <item name="android:layout_marginBottom">@dimen/section_seperator</item>
    </style>
    
    <style name="guide_thumbnail">
        <item name="android:layout_width">@dimen/guide_thumbnail_width</item>
        <item name="android:layout_height">@dimen/guide_thumbnail_height</item>
        <item name="android:background">@drawable/img_background</item>
        <item name="android:visibility">invisible</item>
        <item name="android:padding">@dimen/guide_thumbnail_padding</item>
    </style>
    
    <style name="guide_thumbnail_w_spacing" parent="guide_thumbnail">
        <item name="android:layout_marginBottom">@dimen/guide_thumbnail_spacing</item>
    </style>
 
    <style name="thumbnail_orientation">
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="thumbnail_position">
       	<item name="android:layout_toRightOf">@id/main_image</item>
    </style>
    
</resources>
