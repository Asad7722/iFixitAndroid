<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="step_row_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="bullets">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
    </style>

    <style name="bullets.720">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="step_row_icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_weight">0</item>
        <item name="android:visibility">invisible</item>
        <item name="android:contentDescription">Guide Step notice, important step</item>
    </style>

    <style name="step_row_icon.720">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

</resources>