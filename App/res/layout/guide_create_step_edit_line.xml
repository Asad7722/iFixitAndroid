<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/step_edit_line_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="?attr/doz__background">

    <ImageView
        android:id="@+id/guide_step_item_bullet_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/spinner_background_holo_light"
        android:contentDescription="@string/topic_guide_thumbnail"
        android:scaleType="center"
        android:clickable="true"
        android:src="@drawable/bullet_black"/>

    <EditText
        android:id="@+id/step_line_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/guide_step_item_bullet_thumbnail"
        android:hint="@string/step_text_default"
        android:imeOptions="actionDone"
        android:inputType="text|textMultiLine|textAutoComplete|textAutoCorrect|textCapSentences"
        android:maxLength="350"/>

</RelativeLayout>