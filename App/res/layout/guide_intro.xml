<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/page_padding">
    <!-- <RelativeLayout 
        style="@style/image_wrap">
        <ImageView
            android:id="@+id/intro_image"
            style="@style/main_image" />
    </RelativeLayout>
    -->
   <ScrollView
         android:id="@+id/guide_intro_scroll"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

         <TextView
               android:id="@+id/guide_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="top"
               style="@style/text.title" />

         <TextView
               android:id="@+id/guide_intro_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/text.body"/>

         <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="2" >

            <TextView
                  android:id="@+id/guide_difficulty"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  style="@style/text.body" />

            <TextView
                  android:id="@+id/guide_author"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  style="@style/text.body" />
         </LinearLayout>

         <TextView
               android:id="@+id/num_steps"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/text.body" />

         <TextView
               android:id="@+id/guide_tools"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/text.body" />

         <TextView
               android:id="@+id/guide_parts"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/text.body" />
      </LinearLayout>
   </ScrollView>
   <!--  <ImageView
         android:layout_gravity="bottom|right"
     		android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:src="@drawable/swipe_to_begin"   
     		android:contentDescription="@string/swipe_to_begin" /> -->
</LinearLayout>
