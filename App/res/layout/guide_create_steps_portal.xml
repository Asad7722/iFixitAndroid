<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.mobeta.android.dslv.DragSortListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:dslv="http://schemas.android.com/apk/res/com.mobeta.android.demodslv"
        android:id="@+id/steps_portal_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_step_bar"
        android:layout_margin="3dp"
        android:dividerHeight="2dp"
        android:padding="3dp" />

    <RelativeLayout
        android:id="@+id/add_step_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gallery_bottom_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/gray"
        android:clickable="true" >

        <ImageView
            android:id="@+id/add_step_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_add_list_item" />

        <TextView
            android:id="@+id/add_step_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gallery_login_text_padding"
            android:layout_toRightOf="@+id/add_step_button"
            android:text="@string/add_step"
            android:textColor="@color/dozuki_grey"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/no_steps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/no_steps_text"
        android:visibility="gone" />

</RelativeLayout>