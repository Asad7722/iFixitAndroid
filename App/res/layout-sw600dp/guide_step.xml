<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/guide_wrap.vertical">

    <RelativeLayout style="@style/image_wrap.600" >

        <com.dozuki.ifixit.LoaderImage
            android:id="@+id/main_image"
            style="@style/main_image" />

        <com.dozuki.ifixit.ThumbnailView
            android:id="@+id/thumbnails"
            style="@style/thumbnail_view.vertical" />
    </RelativeLayout>

    <RelativeLayout style="@style/step_text_wrap" >

        <TextView
            android:id="@+id/step_title"
            style="@style/text.title.600.full" />

        <ListView
            android:id="@+id/step_text_list"
            style="@style/step_list" />
    </RelativeLayout>

</LinearLayout>
